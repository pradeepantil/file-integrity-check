- name: Playbook to check file integrity via checksum
  hosts: localhost
  become: true
  vars_files:
    - files_list.yml
  tasks:
  - name: stat module
    stat:
      path: "{{ item.name }}"
    register: output
    with_items: "{{ files }}"

  - name: Print checksum correct
    debug:
      msg: Print checksum correct
    when: '"{{ item.item.checksum }}" == "{{ item.stat.checksum }}"'
    loop: "{{ output_results }}"

  - name: checksum not match
    debug:
      msg: checksum not match
    when: '"{{ item.item.checksum }}" != "{{ item.stat.checksum }}"'
    loop: "{{ output_results }}"
